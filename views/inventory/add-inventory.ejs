<h1 id="addTitle"><%= title %></h1>    

<!-- AddVehicleForm.ejs -->


<div id="addContainer">

    <form action="/inv/add-inventory" class="addForm" method="post">

        <label for="classification_id">Classification:</label>
        <%- classificationList %>
   
        <label for="inv_make">Make:</label>
        <input type="text" placeholder="Min of 3 characters" id="inv_make" name="inv_make" pattern="[A-Za-z]+" required>

        <label for="inv_model">Model:</label>
        <input type="text" placeholder="Min of 3 characters" id="inv_model" name="inv_model" pattern="[A-Za-z]+" required>

        <label for="inv_year">Year:</label>
        <input type="number" placeholder="4-digit year"  id="inv_year" name="inv_year" min="1886" max="2099" required>

        <label for="inv_description">Description:</label>
        <textarea id="inv_description" rows="10" cols="32" name="inv_description" required></textarea>

        <label for="inv_image">Image:</label>
        <input type="text" id="inv_image" name="inv_image" value="/path/to/no-image-available.jpg" readonly>

        <label for="inv_thumbnail">Thumbnail:</label>
        <input type="text" id="inv_thumbnail" name="inv_thumbnail" value="/path/to/no-image-available.jpg" readonly>

        <label for="inv_price">Price:</label>
        <input type="number" placeholder="Decimal or integer" id="inv_price" name="inv_price" min="0" required>

        <label for="inv_miles">Miles:</label>
        <input type="number" placeholder="digits only"  id="inv_miles" name="inv_miles" min="0" required>

        <label for="inv_color">Color:</label>
        <input type="text" id="inv_color" name="inv_color" pattern="[A-Za-z]+" required>

        <button type="submit">Add Vehicle</button>

    </form>

</div>
